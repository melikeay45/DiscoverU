<h3>ProgressComponent</h3>

<div class="w-full bg-gray-200 rounded-full h-4 mb-4">
    <div class="bg-blue-600 h-4 rounded-full" style="width: @ProgressWidth"></div>
</div>
<p class="text-center text-gray-600">@((double)CurrentStep / TotalSteps * 100)%</p>

@code {
    [Parameter] public int CurrentStep { get; set; }
    [Parameter] public int TotalSteps { get; set; }

    private string ProgressWidth => $"{(double)CurrentStep / TotalSteps * 100}%";
}
