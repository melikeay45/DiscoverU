@page "/weather/{Id:guid}"


@using System.Threading.Tasks
<div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl mt-10">
    <div class="md:flex">
        <div class="w-full p-4">
            <div class="flex justify-between items-center mb-4">
                <div class="text-xl font-medium text-black">Kalabalık bir etkinlikte:</div>
                <div class="text-sm text-gray-500">1 / 70</div>
            </div>
            <div class="space-y-4">
                <button class="w-full px-4 py-2 text-left bg-gray-100 hover:bg-gray-200 rounded-md" ">
                    Yabancılar da dahil olmak üzere birçok kişiyle iletişim kurarım.
                </button>
                <button class="w-full px-4 py-2 text-left bg-gray-100 hover:bg-gray-200 rounded-md"">
                    Sadece tanıdığım insanlarla iletişim kurarım.
                </button>
            </div>
            <div class="flex justify-end mt-4">
                <button class="text-gray-500 hover:text-gray-700" @onclick="GoBack">←</button>
            </div>
        </div>
    </div>
</div>

@code {
    private void OnOptionSelected(string option)
    {
        // Seçilen seçeneği işleme kodu
        Console.WriteLine($"Seçilen seçenek: {option}");
    }

    private void GoBack()
    {
        // Geri gitme işlemi
        Console.WriteLine("Geri gidildi");
    }
}