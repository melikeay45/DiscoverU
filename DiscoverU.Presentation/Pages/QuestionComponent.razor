<h3>QuestionComponent</h3>
<div class="flex flex-col items-center">
    <h2 class="text-xl font-bold mb-4">@Question</h2>
    @foreach (var answer in Answers)
    {
        <button @onclick="() => SelectAnswer(answer)" class="w-full max-w-md bg-gray-100 hover:bg-gray-200 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded mb-2">
            @answer
        </button>
    }
</div>
@code {
    [Parameter] public string Question { get; set; }
    [Parameter] public List<string> Answers { get; set; }
    [Parameter] public EventCallback<string> OnAnswerSelected { get; set; }

    private async Task SelectAnswer(string answer)
    {
        await OnAnswerSelected.InvokeAsync(answer);
    }
}


